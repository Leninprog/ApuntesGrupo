<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ApuntesGrupo.ViewModels"
             xmlns:converters="clr-namespace:ApuntesGrupo.Converters"
             x:Class="ApuntesGrupo.Views.WeatherView"
             Title="Clima actual">

    <ScrollView>
        <StackLayout>

            <Button Text="Cargar clima"
                    Command="{Binding CargarClimaCommand}"
                    HorizontalOptions="Center"
                    Margin="0,10" />

            <Label Text="Cargando datos del clima..."
                   IsVisible="{Binding IsLoading}"
                   FontAttributes="Italic"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <Frame Padding="15"
                   BorderColor="LightGray"
                   IsVisible="{Binding IsLoading, Converter={converters:InverseBoolConverter}}">
                <StackLayout>
                    <Label Text="Hora:" FontAttributes="Bold" />
                    <Label Text="{Binding WeatherDataInfo.Current.Time}" />

                    <Label Text="Temperatura (Â°C):" FontAttributes="Bold" />
                    <Label Text="{Binding WeatherDataInfo.Current.Temperature2m}" />

                    <Label Text="Humedad (%):" FontAttributes="Bold" />
                    <Label Text="{Binding WeatherDataInfo.Current.RelativeHumidity2m}" />

                    <Label Text="Lluvia (mm):" FontAttributes="Bold" />
                    <Label Text="{Binding WeatherDataInfo.Current.Rain}" />
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>
